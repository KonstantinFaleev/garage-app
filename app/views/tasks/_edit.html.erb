<div class="row clearfix">
  <div class='icon'>
    <i class="far fa-calendar-alt fa-2x"></i>
  </div>
  <div class="todo_list_title">
    <p>Edit Task</p>
  </div>
</div>
<div class="index_row clearfix" style="padding: 0 2em" >
  <%= form_with model: ([@list, @task]), remote: true do |f| %>
    <div class="field">
      <%= f.text_area :name, placeholder: "Edit Task", style: "margin: 0;", required: true %>
    </div>
    <%= f.text_field :deadline ,placeholder: "Click to choose deadline", start_year: DateTime.now.year, style: "width: 72%;" %>
    <%= f.submit %>
  <% end %>
</div>
